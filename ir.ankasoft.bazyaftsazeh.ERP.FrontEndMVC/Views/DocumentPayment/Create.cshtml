@using ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.DocumentPayment
@model ViewModelCreateAndModifyDocumentPayment

<div class="content-heading">
    @Resource.Document
    <small>
        @*@Html.AnkaResource(model => model.PersonalTitle) @Model.Title - @Model.NationalCode#*@
    </small>
</div>

<div class="row">
    <div class="col-lg-9">
        @using (Html.BeginForm(MVC.DocumentPayment.Create(), FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">@Resource.Edit</div>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.Partial(MVC.DocumentPayment.Views._Detail, Model)
                    </div>
                </div>

                <div class="panel-footer">
                    <div class="clearfix">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit">@Resource.Create</button>
                            @Html.ActionLink(Resource.Cancel, null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-warning" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section styles{
    @Styles.Render(Bundles.Styles.bootstrapPersianDatePickerCss)
}

@section scripts{
    @Scripts.Render(Bundles.Scripts.sweetAlert)
    @Scripts.Render(Bundles.Scripts.bootstrapPersianDatePicker)
    <script type="text/javascript">
        $(document).ready(function () {
            $('.TransactionDatePicker').MdPersianDateTimePicker({
                Placement: 'right', // default is 'bottom'
                //Trigger: 'focus', // default is 'focus',
                //EnableTimePicker: true, // default is true,
                TargetSelector: '.TransactionDatePicker', // default is empty,
                //GroupId: '', // default is empty,
                //ToDate: false, // default is false,
                // FromDate: false, // default is false,
                DisableBeforeToday: true,
                EnglishNumber: true,
            });

            $('.DueDatePicker').MdPersianDateTimePicker({
                Placement: 'right', // default is 'bottom'
                //Trigger: 'focus', // default is 'focus',
                //EnableTimePicker: true, // default is true,
                TargetSelector: '.DueDatePicker', // default is empty,
                //GroupId: '', // default is empty,
                //ToDate: false, // default is false,
                // FromDate: false, // default is false,
                DisableBeforeToday: true,
                EnglishNumber: true,
            });
        });
    </script>
}
