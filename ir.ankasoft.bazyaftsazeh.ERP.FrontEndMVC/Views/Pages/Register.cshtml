@{
    Layout = MVC.Shared.Views._LayoutPage;
}
<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">SIGNUP TO GET INSTANT ACCESS.</p>
            <form role="form" data-parsley-validate="" novalidate="" class="mb-lg">
                <div class="form-group has-feedback">
                    <label for="signupInputEmail1" class="text-muted">پست الکترونیکی</label>
                    <input id="signupInputEmail1" type="email" placeholder="ایمیل خود را وار کنید" autocomplete="off" required="required" class="form-control" />
                    <span class="fa fa-envelope form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    <label for="signupInputPassword1" class="text-muted">رمز عبور</label>
                    <input id="signupInputPassword1" type="password" placeholder="رمز عبور خود را وارد کنید" autocomplete="off" required="required" class="form-control" />
                    <span class="fa fa-lock form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    <label for="signupInputRePassword1" class="text-muted">رمز عبور خود را دوباره وارد کنید</label>
                    <input id="signupInputRePassword1" type="password" placeholder="تکرار رمز عبور" autocomplete="off" required="required" data-parsley-equalto="#signupInputPassword1" class="form-control" />
                    <span class="fa fa-lock form-control-feedback text-muted"></span>
                </div>
                <div class="clearfix">
                    <div class="checkbox c-checkbox pull-right mt0">
                        <label>
                            <a href="#"> قوانین سایت</a> را قبول دارم
                            <input type="checkbox" value="" required="required" name="agreed" />
                            <span class="fa fa-check"></span>
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary mt-lg">ایجاد حساب کاربری</button>
            </form>
            <p class="pt-lg text-center">قبلا حساب کاربری ایجاد نموده اید؟</p><a href="@Url.Action("Login", "Pages")" class="btn btn-block btn-default">وارد شوید</a>
        </div>
    </div>
    <!-- END panel-->
</div>