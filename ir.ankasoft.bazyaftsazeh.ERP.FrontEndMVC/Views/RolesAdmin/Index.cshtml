@model IEnumerable<ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.RolesAdmin.ApplicationRoleViewModel>
@*@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>*@

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    @{
        var modelHeader = Model.FirstOrDefault();
        <thead>
            <tr>
                <th>@Html.LabelFor(modelItem => modelHeader.Name)</th>
                <th>@Html.LabelFor(modelItem => modelHeader.Description)</th>
                <th></th>
            </tr>
        </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>