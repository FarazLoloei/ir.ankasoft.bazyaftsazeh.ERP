<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="AnkaSoft + Software Development Group">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin, anka, ankasoft, software, development">
    <title> @Resource.ApplicationTitle </title>
    <!-- =============== VENDOR STYLES ===============-->
    @Styles.Render("~/bundles/fontawesome")
    @Styles.Render(Bundles.Styles.bbcNassim)
    @Styles.Render("~/Content/IranSans")
    @Styles.Render("~/bundles/simpleLineIcons")
    @Styles.Render("~/bundles/animatecss")
    @Styles.Render("~/bundles/whirl")
    @Styles.Render("~/bundles/contextMenuCss")
    @Styles.Render(Bundles.Styles.siteCss)
    @Styles.Render(Bundles.Styles.Select2Css)
    <!-- =============== PAGE VENDOR STYLES =============== -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link href="@Styles.Url("~/Content/app/css/bootstrap-rtl.css")" rel="stylesheet" type="text/css" id="bscss" />
    <link href="@Styles.Url("~/Content/app/Typography/bootstrap-overlay.css")" rel="stylesheet" type="text/css" />
    <!-- =============== APP STYLES ===============-->
    <link href="@Styles.Url("~/Content/app/css/app-rtl.css")" rel="stylesheet" type="text/css" id="maincss" />
    <link href="@Styles.Url("~/Content/app/Typography/app-overlay.css")" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/jquery")
</head>
<body>

@if (Request.IsAuthenticated)
{
    <div class="wrapper">
        <!-- top navbar-->
        <header class="topnavbar-wrapper">
            @Html.Partial(MVC.Shared.Views._TopNavbar)
        </header>
        <!-- sidebar-->
        <aside class="aside">
            @Html.Partial(MVC.Shared.Views._Sidebar)
        </aside>
        <!-- offsidebar-->
        <aside class="offsidebar hide">
            @*@Html.Partial("_Offsidebar")*@
        </aside>
        <!-- Main section-->
        <section>
            <!-- Page content-->
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </section>
        <!-- Page footer-->
        <footer>
            @Html.Partial(MVC.Shared.Views._Footer)
        </footer>
    </div>

    if (IsSectionDefined("BodyArea"))
    {@RenderSection("BodyArea", required: false)}
    <!-- =============== VENDOR SCRIPTS ===============-->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/matchMedia")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/storage")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryEasing")
    @Scripts.Render("~/bundles/animo")
    @Scripts.Render("~/bundles/slimscroll")
    @Scripts.Render("~/bundles/screenfull")
    @Scripts.Render("~/bundles/localize")
    @Scripts.Render(Bundles.Scripts.contextMenu)
    @Scripts.Render(Bundles.Scripts.Select2)
    <!-- =============== PAGE VENDOR SCRIPTS ===============-->
    @RenderSection("scripts", required: false)
    <!-- =============== APP SCRIPTS ===============-->
    @*@Scripts.Render("~/bundles/Angle")*@
    @Scripts.Render(Bundles.Scripts.Anka)
    @Scripts.Render(Bundles.Scripts.AnkaTools)
}
</body>
</html>