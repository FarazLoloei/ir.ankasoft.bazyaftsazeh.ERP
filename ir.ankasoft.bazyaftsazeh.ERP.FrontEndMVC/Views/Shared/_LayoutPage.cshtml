<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>@Resource.ApplicationTitle</title>
    <!-- =============== VENDOR STYLES ===============-->
    @Styles.Render("~/bundles/fontawesome")
    @Styles.Render("~/bundles/bbcnassim")
    @Styles.Render("~/bundles/simpleLineIcons")
    <!-- =============== PAGE VENDOR STYLES =============== -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link href="@Styles.Url("~/Content/app/css/bootstrap-rtl.css")" rel="stylesheet" type="text/css" id="bscss" />
    <link href="@Styles.Url("~/Content/app/Typography/bootstrap-overlay.css")" rel="stylesheet" type="text/css" />
    <!-- =============== APP STYLES ===============-->
    <link href="@Styles.Url("~/Content/app/css/app.css")" rel="stylesheet" type="text/css" id="maincss" />
    <link href="@Styles.Url("~/Content/app/Typography/app-overlay.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="wrapper">
        @RenderBody()
    </div>
    <div class="p-lg text-center">
        <span>&copy;</span>
        <span>@System.DateTime.Now.Year</span>
        <span>-</span>
        <span>Anka</span>
        <br>
        <span>Anka Software Engineering Group</span>
    </div>

    <!-- =============== VENDOR SCRIPTS ===============-->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/storage")
    @*@Scripts.Render("~/bundles/parsley")*@
    <!-- =============== PAGE VENDOR SCRIPTS ===============-->
    @RenderSection("scripts", required: false)
    <!-- =============== APP SCRIPTS ===============-->
    @*@Scripts.Render("~/bundles/Angle")*@
    @Scripts.Render(Bundles.Scripts.Anka)
</body>
</html>