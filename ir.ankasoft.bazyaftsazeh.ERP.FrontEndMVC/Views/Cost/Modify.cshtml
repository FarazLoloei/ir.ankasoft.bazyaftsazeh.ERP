@model ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Cost.ViewModelCreateAndModifyCost

<div class="content-heading">@Resource.Cost</div>

<div class="row">
    <div class="col-lg-9">
        @using (Html.BeginForm(MVC.Cost.Modify(), FormMethod.Post, new { @class = "panel" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">@Resource.Edit</div>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.Partial(MVC.Cost.Views._Detail, Model)
                    </div>
                </div>

                <div class="panel-footer">
                    <div class="clearfix">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit">@Resource.Edit</button>
                            @Html.ActionLink(Resource.Cancel, null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-warning" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>