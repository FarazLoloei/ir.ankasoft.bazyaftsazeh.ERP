@model PagerModel<ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Cost.ViewModelCostDisplay>

<table class="table anka_dataTable table-striped table-bordered">
    @{
        var modelHeader = Model.Data.FirstOrDefault();
        var defaultClass = "";
        <thead>
            @Html.Hidden("sortBy", Model.PageData.filterDataSource.sortBy)
            @Html.Hidden("sortType", Model.PageData.filterDataSource.sortType)
            <tr class="context-menu-header">
                <th class="col-md-2">
                    <a href="#" data-column="Title_@nameof(modelHeader.Title)">
                        @Html.LabelFor(modelItem => modelHeader.Title)
                    </a>
                    <span class="pull-right">
                        @{
                            defaultClass = "fa-sort";
                            if (Model.PageData.filterDataSource.sortBy == "Title_" + nameof(modelHeader.Title))
                            {
                                defaultClass = Model.PageData.filterDataSource.sortType == 1 ? "fa-sort-amount-asc" : "fa-sort-amount-desc";
                            }
                        }
                        <i class="fa @defaultClass" aria-hidden="true"></i>
                    </span>
                </th>
                <th class="col-md-2">
                    <a href="#" data-column="@nameof(modelHeader.Value)">
                        @Html.LabelFor(modelItem => modelHeader.Value)
                    </a>
                    <span class="pull-right">
                        @{
                            defaultClass = "fa-sort";
                            if (Model.PageData.filterDataSource.sortBy == nameof(modelHeader.Value))
                            {
                                defaultClass = Model.PageData.filterDataSource.sortType == 1 ? "fa-sort-amount-asc" : "fa-sort-amount-desc";
                            }
                        }
                        <i class="fa @defaultClass" aria-hidden="true"></i>
                    </span>
                </th>

                <th class="col-md-8"></th>
            </tr>
        </thead>
                            if (Model.Data.Any())
                            {
                                <tbody>
                                    @foreach (var item in Model.Data)
                {
                                        <tr data-itemid='@item.recId' class="context-menu">
                                            <td class="col-md-2">@Html.DisplayFor(model => item.Title)</td>
                                            <td class="col-md-2">@Html.DisplayFor(modelItem => item.ValueDisplayMode)</td>
                                            <td class="col-md-8"></td>
                                        </tr>
                                    }
                                </tbody>
                                @*<tfoot>
                                        <tr>

                                            <td class="col-md-2">@Html.Editor(Model.filter.NationalCode)</td>
                                                <td class="col-md-2">@Html.Editor(Model.filter.Title)</td>
                                                <td class="col-md-2"></td>
                                                <td class="col-md-1"></td>
                                                <td class="col-md-1"></td>
                                                <td class="col-md-4"></td>
                                        </tr>
                                    </tfoot>*@
                            }
    }
</table>

@Html.Partial(MVC.Shared.Views._Pager, Model.PageData)