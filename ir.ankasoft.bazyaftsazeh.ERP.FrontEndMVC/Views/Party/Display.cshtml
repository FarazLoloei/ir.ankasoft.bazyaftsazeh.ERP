@model ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Party.ViewModelModifyParty

<div class="content-heading">@Resource.CounterParty - @Model.NationalCode#</div>

<div class="row">
    <div class="col-lg-9">

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">@Resource.Edit</div>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.recId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.PersonalTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 form-control-static">
                            @Html.AnkaResource(model => model.PersonalTitle)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NationalCode, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 form-control-static">
                            @Model.NationalCode
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 form-control-static">
                            @Model.Title
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 form-control-static">
                            @Model.Description
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="clearfix">
                    <div class="pull-right">
                        @Html.ActionLink(Resource.Modify, MVC.Party.Modify(Model.recId), new { @class = "btn btn-green" })
                        @Html.ActionLink(Resource.EditCommunication, MVC.Party.CommunicationList(Model.recId), new { @class = "btn btn-green" })
                        @Html.ActionLink(Resource.EditPostalAddress, MVC.Party.PostalAddressList(Model.recId), new { @class = "btn btn-green" })
                        @Html.ActionLink(Resource.Return, null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
