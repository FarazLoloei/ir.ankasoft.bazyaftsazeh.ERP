@model PagerModel<ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Party.PartyDisplayViewModel>

<table class="table anka_dataTable table-striped table-bordered">
    @{
        var modelHeader = Model.Data.FirstOrDefault();
        <thead>
            <tr class="context-menu">
                <th>
                    <a href="#" onclick="alert(' @nameof( modelHeader.NationalCode)');">
                        @Html.LabelFor(modelItem => modelHeader.NationalCode)
                    </a>
                    <span class="pull-right">
                        <i class="fa fa-sort" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    <a href="#" onclick="alert(' @nameof( modelHeader.Title)');">
                        @Html.LabelFor(modelItem => modelHeader.Title)
                    </a>
                    <span class="pull-right">
                        <i class="fa fa-sort" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    <a href="#" onclick="alert(' @nameof( modelHeader.Roles)');">
                        @Html.LabelFor(modelItem => modelHeader.Roles)
                    </a>
                    <span class="pull-right">
                        <i class="fa fa-sort" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    <a href="#" onclick="alert(' @nameof( modelHeader.Telephone)');">
                        @Html.LabelFor(modelItem => modelHeader.Telephone)
                    </a>
                    <span class="pull-right">
                        <i class="fa fa-sort" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    <a href="#" onclick="alert(' @nameof( modelHeader.Mobile)');">
                        @Html.LabelFor(modelItem => modelHeader.Mobile)
                    </a>
                    <span class="pull-right">
                        <i class="fa fa-sort" aria-hidden="true"></i>
                    </span>
                </th>
                <th></th>
            </tr>
        </thead>
        if (Model.Data.Any())
        {
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr data-itemid='@item.recId' class="context-menu">
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.NationalCode)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td class="col-md-2"></td>
                        <td class="col-md-1">@Html.DisplayFor(modelItem => item.Telephone)</td>
                        <td class="col-md-1">@Html.DisplayFor(modelItem => item.Mobile)</td>
                        <td class="col-md-4"></td>
                    </tr>
                }
            </tbody>
            @*<tfoot>
                <tr>

                    <td class="col-md-2">@Html.Editor(Model.filter.NationalCode)</td>
                        <td class="col-md-2">@Html.Editor(Model.filter.Title)</td>
                        <td class="col-md-2"></td>
                        <td class="col-md-1"></td>
                        <td class="col-md-1"></td>
                        <td class="col-md-4"></td>
                </tr>
            </tfoot>*@
        }
    }
</table>

@Html.Partial(MVC.Shared.Views._Pager, Model.PageData)