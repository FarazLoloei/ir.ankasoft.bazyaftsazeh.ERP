
@using ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.DocumentImperfection
@model List<ViewModelCreateAndModifyDocumentImperfection>
@*Communication*@
@{
    ViewModelCreateAndModifyDocumentImperfection schema = Model.FirstOrDefault();
}
@{
    if (Model.Any())
    {
        <thead>
            <tr>
                <th class="hidden"></th>
                <th class="col-md-4">@Html.LabelFor(model => schema.ImperfectionTitle)</th>
                <th class="col-md-2">@Html.LabelFor(model => schema.ImperfectionValueDisplayMode)</th>
                <th class="col-md-6"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Select((value, i) => new { i, value }))
            {
                <tr>
                    <td class="hidden">@Html.HiddenFor(model => Model[@item.i].recId)</td>
                    <td class="col-md-4">@Html.DropDownListFor(model => Model[@item.i].ImperfectionTitle, Model[item.i].ImperfectionList, new { @class = "select2 form-control selector" })</td>
                    <td class="col-md-2">@Html.EditorFor(model => Model[@item.i].ImperfectionValue, new { htmlAttributes = new { @class = "form-control text-right value" } })</td>
                    <td class="col-md-6"></td>
                </tr>
            }
        </tbody>
    }
}