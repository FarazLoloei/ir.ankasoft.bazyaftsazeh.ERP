@*@model PagerModel<ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Document.ViewModelDisplayDocument>*@
@using ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Document
@model ViewModelPreRequirement

<h3>@Resource.Document</h3>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm(MVC.Document.DocumentPreReqirement(), FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.recId)
            @Html.HiddenFor(model => model.DocumentRefRecId)
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title"> بررسی مدارک اولیه</div> @*@Resource.Edit*@
                </div>
                <div class="panel-body">
                    <div class="col-md-9">
                        <div class="form-horizontal">
                            
                            <fieldset>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.HasSanad, htmlAttributes: new { @class = "control-label col-md-10" })
                                    <div class="col-md-2">
                                        @Html.CheckBoxFor(model => model.HasSanad, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.HasGreenPaper, htmlAttributes: new { @class = "control-label col-md-10" })
                                    <div class="col-md-2">
                                        @Html.CheckBoxFor(model => model.HasGreenPaper, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.HasAdameKhalafi, htmlAttributes: new { @class = "control-label col-md-10" })
                                    <div class="col-md-2">
                                        @Html.CheckBoxFor(model => model.HasAdameKhalafi, new { @class = "form-control" })
                                    </div>
                                </div>
                            </fieldset>
                            
                            <fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <div class="clearfix">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit">@Resource.Save</button>
                            @Html.ActionLink(Resource.Cancel, null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-warning" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section styles{
    @Styles.Render(Bundles.Styles.bootstrapPersianDatePickerCss)
}
@section scripts{
    @Scripts.Render(Bundles.Scripts.sweetAlert)
    @Scripts.Render(Bundles.Scripts.bootstrapPersianDatePicker)
    <script type="text/javascript">
        $(document).ready(function () {
           
        });
    </script>
}