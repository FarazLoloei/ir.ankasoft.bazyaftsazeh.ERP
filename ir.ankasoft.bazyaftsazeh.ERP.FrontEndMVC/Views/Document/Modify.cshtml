                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.ContractorRecId, Model.Contractor,
                                        new { @class = "select2 form-control" })
                                        @Html.ValidationMessageFor(model => model.ContractorRecId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </fieldset>
