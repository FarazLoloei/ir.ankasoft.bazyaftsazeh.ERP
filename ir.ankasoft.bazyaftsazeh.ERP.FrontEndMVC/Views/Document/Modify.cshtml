@model ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Document.ViewModelModifyDocument

<h3>@Resource.Document</h3>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm(MVC.Document.Modify(), FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Vehicle.recId)
            @Html.HiddenFor(model => model.Vehicle.Plate.recId)
