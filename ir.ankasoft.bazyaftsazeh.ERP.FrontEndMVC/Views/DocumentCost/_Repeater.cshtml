@using ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.DocumentCost
@model List<ViewModelCreateAndModifyDocumentCost>
@*Cost*@
@{
    ViewModelCreateAndModifyDocumentCost schema = Model.FirstOrDefault();
}
@{
    if (Model.Any())
    {
        <thead>
            <tr>
                <th class="hidden"></th>
                <th class="col-md-4">@Html.LabelFor(model => schema.Title)</th>
                <th class="col-md-2">@Html.LabelFor(model => schema.ValueDisplayMode)</th>
                <th class="col-md-6"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Select((value, i) => new { i, value }))
            {
                <tr>
                    <td class="hidden">@Html.HiddenFor(model => Model[@item.i].recId)</td>
                    <td class="col-md-4">@Html.DropDownListFor(model => Model[@item.i].Title, Model[item.i].CostList, new { @class = "select2 form-control" })</td>
                    <td class="col-md-2">@Html.EditorFor(model => Model[@item.i].ValueDisplayMode, new { htmlAttributes = new { @class = "form-control text-right" } })</td>
                    <td class="col-md-6"></td>
                </tr>
            }
        </tbody>
    }
}