@model PagerModel<ir.ankasoft.bazyaftsazeh.ERP.FrontEndMVC.Models.Importer.ViewModelImporterDisplay>

<table class="table anka_dataTable table-striped table-bordered">
    @{
        var modelHeader = Model.Data.FirstOrDefault();
        var defaultClass = "";
        <thead>
            @Html.Hidden("sortBy", Model.PageData.filterDataSource.sortBy)
            @Html.Hidden("sortType", Model.PageData.filterDataSource.sortType)
            <tr class="context-menu-header">
                <th>
                    @Html.LabelFor(modelItem => modelHeader.NationalCode)
                </th>
                <th>
                    <a href="#" data-column="@nameof(modelHeader.Name)">
                        @Html.LabelFor(modelItem => modelHeader.Name)
                    </a>
                    <span class="pull-right">
                        @{
                            defaultClass = "fa-sort";
                            if (Model.PageData.filterDataSource.sortBy == nameof(modelHeader.Name))
                            {
                                defaultClass = Model.PageData.filterDataSource.sortType == 1 ? "fa-sort-amount-asc" : "fa-sort-amount-desc";
                            }
                        }
                        <i class="fa @defaultClass" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    <a href="#" data-column="@nameof(modelHeader.Family)">
                        @Html.LabelFor(modelItem => modelHeader.Family)
                    </a>
                    <span class="pull-right">
                        @{
                            defaultClass = "fa-sort";
                            if (Model.PageData.filterDataSource.sortBy == nameof(modelHeader.Family))
                            {
                                defaultClass = Model.PageData.filterDataSource.sortType == 1 ? "fa-sort-amount-asc" : "fa-sort-amount-desc";
                            }
                        }
                        <i class="fa @defaultClass" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    <a href="#" data-column="@nameof(modelHeader.ImporterNumber)">
                        @Html.LabelFor(modelItem => modelHeader.ImporterNumber)
                    </a>
                    <span class="pull-right">
                        @{
                            defaultClass = "fa-sort";
                            if (Model.PageData.filterDataSource.sortBy == nameof(modelHeader.ImporterNumber))
                            {
                                defaultClass = Model.PageData.filterDataSource.sortType == 1 ? "fa-sort-amount-asc" : "fa-sort-amount-desc";
                            }
                        }
                        <i class="fa @defaultClass" aria-hidden="true"></i>
                    </span>
                </th>
                <th>
                    @Html.LabelFor(modelItem => modelHeader.Telephone)
                </th>
                <th>
                    @Html.LabelFor(modelItem => modelHeader.Mobile)
                </th>
                <th></th>
            </tr>
        </thead>
                            if (Model.Data.Any())
                            {
                                <tbody>
                                    @foreach (var item in Model.Data)
                {
                                        <tr data-itemid='@item.recId' class="context-menu">
                                            <td class="col-md-2 text-right">@Html.DisplayFor(modelItem => item.NationalCode)</td>
                                            <td class="col-md-2">@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td class="col-md-2">@Html.DisplayFor(modelItem => item.Family)</td>
                                            <td class="col-md-2">@Html.DisplayFor(modelItem => item.ImporterNumber)</td>
                                            <td class="col-md-1 text-right">@Html.DisplayFor(modelItem => item.Telephone)</td>
                                            <td class="col-md-1 text-right">@Html.DisplayFor(modelItem => item.Mobile)</td>
                                            <td class="col-md-1"></td>
                                        </tr>
                                    }
                                </tbody>
                            }
    }
</table>

@Html.Partial(MVC.Shared.Views._Pager, Model.PageData)